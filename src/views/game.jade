doctype html
html(lang="en")
  head
    title OpenFarm Client
    meta(charset="UTF-8")
    link(rel="stylesheet", type="text/css", href="/resources/styles/gamestyles.css")
    script(src="http://localhost:3000/socket.io/socket.io.js")
    script(src="/socket.io/socket.io.js")
    script(src="https://code.createjs.com/preloadjs-0.6.0.min.js")
    script(src="/resources/scripts/gameclient.js")
  body
    #user_div
      if gameData
        h3#username Username: #{gameData.user}
        h3#date_created Date Created: #{gameData.dateCreated.getMonth() + 1}/#{gameData.dateCreated.getDate()}/#{gameData.dateCreated.getFullYear()}
      a#logout_submit(href="/logout") Log Out
    #canvasContainer
      canvas#mainCanvas(width="800", height="600")
        | Please use a browser compatible with HTML5 technologies.
      button#upButton Move Up
      button#downButton Move Down
      button#leftButton Move Left
      button#rightButton Move Right
